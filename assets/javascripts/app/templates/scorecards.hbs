{{#if isLoaded}}
<div class="navbar">
  <div class="navbar-inner scorecards">
    <ul class="nav">
        {{#each row in matrix}}
          {{#if hasOneChild}}
            <!-- one child -->
            {{partial "scorecards/nav_link"}}
          {{else}}
            <!-- dropdown -->
            {{ partial "scorecards/dropdown" }}
          {{/if}}
        {{/each}}
    </ul>
  </div>
</div>
{{/if}}